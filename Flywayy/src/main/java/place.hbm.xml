<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Places" table = "places">
       
      <id name = "ID" type = "int" column = "ID">
         <generator class="native"/>
      </id>
      
      <property name = "name" column = "name_n" type = "text"/>
      <property name = "description" column = "Descriptions" type = "text"/>   
      <property name = "From" column = "fromto" type = "text"/>      
      <property name = "Destination" column = "destination" type = "text"/>    
   </class>
</hibernate-mapping>